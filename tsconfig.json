{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "files": [
    "./src/index.ts",
  ],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
  ]
}
